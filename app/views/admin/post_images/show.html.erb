<div class="container">
	<div class="row">
		<div class="col"></div>

		<div class="col-8 mt-4">
			<div class="row">
				<h2>投稿詳細</h2>
			</div>

			<div class="row mt-3">
				<div class="col">
					<%# 商品画像を表示 %>
					<div>
						<%= attachment_image_tag @post_image, :image, format: "jpg", fallback: "no_image.png", size: "300" %>
					</div>
					<h6 class="mt-2">
						<span class="badge badge-info">
							<%= "ラベル" %>
						</span>
					</h6>
					<h6 class="mt-2">
						<% @post_image.tags.each do |tag| %>
                			<span class="badge badge-info">
                				<% tag.name %>
                			</span>
              			<% end %>
					</h6>
				</div>

				<div class="col">
					<div class="row">
						<%# 商品情報を表示 %>
						<table class="table table-hover table-bordered">
							<tbody>
								<tr>
									<th>
										<%= "店舗名" %>
									</th>
									<td>
										<%= current_shop.name %>
									</td>
								</tr>
								<tr>
									<th>
										<%= "商品名" %>
									</th>
									<td>
										<%= @post_image.title %>
									</td>
								</tr>
								<tr>
									<th>
										<%= "金額" %>
									</th>
									<td>
										<%= @post_image.price %>円
									</td>
								</tr>
								<tr>
									<th>
										<%= "紹介文" %>
									</th>
									<td>
										<%= @post_image.body %>
									</td>
								</tr>
							</tbody>
						</table>
					</div>

					<div class="row">
						<div class="col text-right">
							<%# 該当の編集ページの遷移 %>
							<%= link_to "編集", edit_admin_post_image_path, class: "btn btn-primary" %>
						</div>
					</div>

				</div>
			</div>
		</div>

		<div class="col"></div>
	</div>
</div>