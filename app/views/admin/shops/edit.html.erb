<div class="container">
  <div class="row">
    <div class="col"></div>
    <div class="col-8 mt-4">
      <h2>登録情報編集</h2>

      <%# デフォルトのaction設定でuserサイトのshop詳細に遷移してしまうので、urlで保存先を指定 %>
      <%= form_for(@shop, url: admin_shop_path) do |f| %>

        <div class="row mt-5">
          <div class="col">
            <%= attachment_image_tag @shop, :profile_image, format: "jpg", fallback: "no_image.png", size:'300x300', class: "rounded-circle border" %>
          </div>

          <div class="col">
            <%# 画像ファイル追加 %>
            <div class="row">
              <div class="col-5">
                <%= f.label :profile_image, "画像ファイル" %>
              </div>
              <div class="col-7">
                <%= f.attachment_field :profile_image %>
              </div>
            </div>
            <%# 店舗名登録 %>
            <div class="row mt-3">
              <div class="col-5">
                <%= f.label :name, "店舗名" %>
              </div>
              <div class="col-7">
                <%= f.text_field :name, autofocus: true %>
              </div>
            </div>

            <%# メールアドレス登録  %>
            <div class="row mt-3">
              <div class="col-5">
                <%= f.label :email, "メールアドレス" %>
              </div>
              <div class="col-7">
                <%= f.email_field :email, autocomplete: "email" %>
              </div>
            </div>

            <%# 郵便番号登録 %>
            <div class="row mt-3">
              <div class="col-5">
                <%= f.label :postal_code, "郵便番号" %>
              </div>
              <div class="col-7">
                <%= f.text_field :postal_code %>
              </div>
            </div>

            <%# 住所登録 %>
            <div class="row mt-3">
              <div class="col-5">
                <%= f.label :address, "住所" %>
              </div>
              <div class="col-7">
                <%= f.text_area :address %>
              </div>
            </div>


            <div class="row actions mt-3">
              <div class="col text-right">
                <%# 変更内容をupdate、マイページにリダイレクト %>
                <%= f.submit "変更", class: "btn btn-success" %>
                <%# 退会ページに遷移 %>
                <%= link_to "退会", cancel_admin_shop_path, class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>

    </div>
    <div class="col"></div>
  </div>
</div>
