<div class="container">
	<div class="row">
		<div class="col"></div>

		<div class="col-6">
			<% @post_images.each do |ps| %>
				<div class="row mt-5">
					<div class="card mx-auto">
						<div class="card-header">
							<%= link_to shop_path(ps.shop.id), :style=>"color:black;" do %>
								<%= ps.shop.name %>
							<% end %>
						</div>
						<div class="card-image">
							<%= link_to post_image_path(ps.id), :style=>"color:black;" do %>
								<%= attachment_image_tag ps, :image, format:"jpg", fallback: "no_image.png", size:'400' %>
							<% end %>
						</div>
						<div class="card-body">
							<div class="card-title">
								<%= ps.title %>
							</div>
							<div class="card-text">
								<div class="price">
									<%= ps.price %>円
								</div>
								<div class="favorite">
									<% if ps.favorited_by?(current_user) %>
										<%= link_to post_image_favorite_path(ps.id), method: :delete do %>
											<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
										<% end %>
										<%= ps.favorites.count %>いいね
									<% else %>
										<%= link_to post_image_favorite_path(ps.id), method: :post do %>
											<i class="fa fa-heart-o" aria-hidden="true"></i>
										<% end %>
										<%= ps.favorites.count %>いいね
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			<% end %>
		</div>

		<div class="col"></div>
	</div>
</div>